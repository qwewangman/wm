    //立卷添加
    public function lj_add()
    {
        $data  = input('param.');
        $rr = Db::table('oa_students')->order("id desc")->select();
        //file_number 卷号
        if (empty($rr)){ //如果表里没有数据
            $u = 0;
            $filing = 0;
        }else{
            $u  = $rr[0]['file_number']; //如果表里有数据取到第一条的数据
            $filing = $rr[0]['filing_num']; //入档号
        }
        $year = date('Y'); //当前年份
        $b    = substr($u,1,4); //截取字符串
        $f    = substr($filing,2,4);
        $xl = $data['education'] == 1 ? 1 : 2;
        if ($filing == 0 && ($f != $year)){   //入档号
            $filing_num = $xl . 'S' . $year . 001;
        }else{
            if ((substr($filing,6)+1) < 10){
                $fil = '00';
            }else if ((substr($filing,6)+1) >= 10 && (substr($filing,6)+1) < 100 ){
                $fil = '0';
            }else{
                $fil = '';
            }
            $filing_num = $xl . 'S' .$year. $fil .(substr($filing,6)+1);
        }
        if($u == 0 && ($b != $year))
        {
            //生成卷号
            $jyh = $year."-".'001';
        }else{
            //如果学号存在并且符合标准
            if((substr($u,6)+1) < 10)
            {
                $lj = '-00';
            }else if((substr($u,6)+1) >= 10 && (substr($u,6)+1) < 100 ){
                $lj = '-0';
            }else{
                $lj = '-';
            }
            $jyh = $year.$lj.(substr($u,6)+1);
        }
        if ($data['education'] == 1){
            $jh = 'B'.$jyh;
        }else{
            $jh = 'Y'.$jyh;
        }
        $data['file_number'] = $jh;
        $data['filing_num'] = $filing_num;
        //card_term 省份证起止时间
        $data['card_term']   = strtotime($data['card_create'])."-".strtotime($data['card_end']);
        //$data['type']        = 1;            //个人档案
        unset($data['card_create']);
        unset($data['card_end']);
        unset($data['education']);
        $data['grade'] = $data['grade'] . '级';

        $s = new StudentsModel();
        $result  = $s->saveStudent($data);
        if($result){
            //设置成功后跳转页面的地址，默认的返回页面是$_SERVER['HTTP_REFERER']
            $this->success('新增成功', url('/lijuan'));
        } else {
            //错误页面的默认跳转页面是返回前一页，通常不需要设置
            $this->error('新增失败');
        }
    }
