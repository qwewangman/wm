<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>北京舞蹈学院学生档案管理系统</title>
    <link rel="stylesheet" type="text/css" href="__STATIC__/css/records.css">
    <link rel="stylesheet" type="text/css" href="__STATIC__/font/iconfont.css">
    <link rel="stylesheet" type="text/css" href="__STATIC__/layui/css/layui.css">
    <link rel="stylesheet" type="text/css" href="__STATIC__/css/style.css">


    <script src="__STATIC__/js/jquery-2.1.1.min.js"></script>
    <script src="__STATIC__/layui/layui.js" charset="utf-8"></script>
    <script src="__STATIC__/js/index.js"></script>
</head>
<style>
    #ad1,#del1,#upd1{
        cursor: pointer;
    }
    #ad2,#del2,#upd2{
        cursor: pointer;
    }
    #ad1,#del1,#upd1{
        cursor: pointer;
    }
    .newRightBox{
        margin-top: -20px;
    }
</style>
<body>
<div class="hederBox">
    <div class="fl_left logo">北京舞蹈学院学生档案管理系统</div>
    <div class="fl_right">
        <div class="fl_left user">管理员</div>
        <a href="{:url('/login_out')}"  style="color: white"><div class="fl_right signOut">退出</div></a>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>

<div class="contetnBox">

    {include file='layout'}

    <div class="rightBox fl_right">
        <div class="titleBox">

            <div class="title fl_left">系统设置</div>
            <!--<div class="fl_right detaBox">-->
            <!--<div class="detaBtn fl_left"><a href="{:url('/addExcel')}" style="color: #333">批量导入</a></div>-->
            <!--</div>-->
            <div class="clear"></div>
        </div>
        <!--<div class="details">-->

        <div class="" style="background: white ; padding: 50px 30px; overflow: hidden">


            <!------------------------------------------------------------------------------------------------------------------->

            <!--<div class="layui-tab">-->
                    <!--<ul class="layui-tab-title">
                        <li id="sta1" class="layui-this">院系设置</li>
                        <li id="sta2">类目设置</li>
                    </ul>-->
                <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show">
                        <!----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------                        -->
                        <div style="float: left" class="newRightBox">
                            <div style="width: 60% ;">
                                <!------------------------------------------------------------------------------------------------------------------->
                                <div class="layui-collapse" lay-accordion="">
                                    {foreach name='deparjor' item='v'}
                                    <div class="layui-colla-item">
                                        <h2 class="layui-colla-title">{$v.d_name}   <i class="layui-icon " id="ad1" about="{$v.id}" style="float: right;"></i></h2>
                                        <div class="layui-colla-content">
                                            <!--<div class="layui-colla-content layui-show">-->
                                            {foreach name='v.major' item='vv'}
                                            {if condition=" is_array($vv)"}
                                            <div class="layui-collapse" lay-accordion="">
                                                <div class="layui-colla-item">
                                                    <h6 class="layui-colla-title" style="background-color: #f2f2f2;">{$vv.key} . {$vv.m_name} <i class="layui-icon"  id="del1" about="{$vv.id}" style="float: right;"></i>     <i class="layui-icon"  id="upd1" about="{$vv.id}" style="float: right;"></i>  </h6>
                                                    <div class="layui-colla-content" >
                                                        <p style="padding-left: 20px"> <span style="padding-right: 5px">备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注:</span> {$vv.m_info}</p>
                                                    </div>
                                                </div>
                                            </div>
                                            {/if}
                                            {/foreach}
                                        </div>
                                    </div>
                                    {/foreach}
                                </div>
                                <br>
                                <script>
                                    $(document).on('click','#ad1',function()
                                    {
                                        var id= $(this).attr('about');
                                        var url = "{:url('/YxAdd')}?id="+id;
                                        location.href=url
                                    })
                                    $(document).on('click','#upd1',function()
                                    {
                                        var id= $(this).attr('about');
                                        var url = "{:url('/YxUpd')}?id="+id;
                                        location.href=url
                                    })
                                    $(document).on('click','#del1',function()
                                    {
                                        var id= $(this).attr('about');
                                        var url = "{:url('/YxDelar')}?id="+id;
                                        var msg = "您真的确定要删除吗？\n\n请确认！";
                                        if (confirm(msg)==true){
                                            location.href=url
                                        }else{
                                            return false;
                                        }
                                    })
                                </script>
                                <!------------------------------------------------------------------------------------------------------------------->
                            </div>
                        </div>
                    </div>
                    <div class="layui-tab-item">

                        <div class="newRightBox">
                            <div style="width: 60% ;">
                                <!------------------------------------------------------------------------------------------------------------------->
                                <div class="layui-collapse" lay-accordion="">
                                    {foreach name='result' item='v'}
                                    <div class="layui-colla-item">
                                        <h2 class="layui-colla-title">{$v.class_name}   <i class="layui-icon " id="ad2" about="{$v.id}" style="float: right;"></i></h2>
                                        <div class="layui-colla-content">
                                            <!--<div class="layui-colla-content layui-show">-->
                                            {foreach name='v.cent' item='vv'}
                                            {if condition=" is_array($vv)"}
                                            <div class="layui-collapse" lay-accordion="">
                                                <div class="layui-colla-item">
                                                    <h6 class="" style="background-color: #f2f2f2;">{$vv.class_num} . {$vv.class_name} <i class="layui-icon"  id="del2" about="{$vv.id}" style="float: right;"></i>     <i class="layui-icon"  id="upd2" about="{$vv.id}" style="float: right;"></i>  </h6>
                                                    <div class="layui-colla-content" >
                                                        {notempty name="vv.content"}
                                                        <p style="padding-left: 20px"> <span style="padding-right: 5px">备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注:</span> {$vv.content}</p>
                                                        {/notempty}
                                                    </div>
                                                </div>
                                            </div>
                                            {/if}
                                            {/foreach}
                                        </div>
                                    </div>
                                    {/foreach}
                                </div>
                                <br>

                                <script>
                                    $(document).on('click','#ad2',function()
                                    {
                                        var id= $(this).attr('about');
                                        var url = "{:url('/LmAdd')}?id="+id;
                                        location.href=url
                                    })
                                    $(document).on('click','#upd2',function()
                                    {
                                        var id= $(this).attr('about');
                                        var url = "{:url('/LmUpd')}?id="+id;
                                        location.href=url
                                    })
                                    $(document).on('click','#del2',function()
                                    {
                                        var id= $(this).attr('about');
                                        var url = "{:url('/LmDel')}?id="+id;
                                        var msg = "您真的确定要删除吗？\n\n请确认！";
                                        if (confirm(msg)==true){
                                            location.href=url
                                        }else{
                                            return false;
                                        }
                                    })
                                </script>
                                <!------------------------------------------------------------------------------------------------------------------->
                            </div>
                        </div>
                    </div>
                    <!------------------------------------------------------------------------------------------------------------------->
            <script>
                window.onload = function(){
                    if(location.href.indexOf('#reloaded')==-1){
                        location.href=location.href+"#reloaded";
                        location.reload();
                    }
                }
                layui.use('element', function(){
                    var $ = layui.jquery
                        ,element = layui.element; //Tab的切换功能，切换事件监听等，需要依赖element模块

                    //触发事件
                    var active = {
                        tabAdd: function(){
                            //新增一个Tab项
                            element.tabAdd('demo', {
                                title: '新选项'+ (Math.random()*1000|0) //用于演示
                                ,content: '内容'+ (Math.random()*1000|0)
                                ,id: new Date().getTime() //实际使用一般是规定好的id，这里以时间戳模拟下
                            })
                        }
                        ,tabDelete: function(othis){
                            //删除指定Tab项
                            element.tabDelete('demo', '44'); //删除：“商品管理”


                            othis.addClass('layui-btn-disabled');
                        }
                        ,tabChange: function(){
                            //切换到指定Tab项
                            element.tabChange('demo', '22'); //切换到：用户管理
                        }
                    };

                    $('.site-demo-active').on('click', function(){
                        var othis = $(this), type = othis.data('type');
                        active[type] ? active[type].call(this, othis) : '';
                    });

                    //Hash地址的定位
                    var layid = location.hash.replace(/^#test=/, '');
                    element.tabChange('test', layid);

                    element.on('tab(test)', function(elem){
                        location.hash = 'test='+ $(this).attr('lay-id');
                    });

                });
            </script>



            <!------------------------------------------------------javascriptEnd------------------------------------------------------------->
        </div>
    <!--</div>-->
</div>

</body>
</html>
