<!-- BEGIN THEME GLOBAL SCRIPTS -->
<script type="application/javascript" >
    $(".showimg").click(function(){
        var key = $(this).attr("key");
        layer.photos({
            photos: {
                "title": "", //相册标题
                "start": key, //初始显示的图片序号，默认0
                "data": [   //相册包含的图片，数组格式
                    {
                        "alt": "照片",
                        "src": "{$info.photo}", //原图地址
                    }
                ]
            }
            ,anim: 5 //0-6的选择，指定弹出图片动画类型，默认随机（请注意，3.0之前的版本用shift参数）
        });
    });
    $("#del").click(function () {
        if(confirm("确认删除吗？此操作不可恢复，请谨慎操作"))
        {
            $.post("{:url('/file/del')}",{id:"{$info.id}"},function(res){
                alert("删除成功");
                window.top.location.reload();
            },'json');
        }
    });

    $("#addfile").click(function () {
        var id      = "{$info.id}";
        var name    = "{$info.name}";
        layer.open({
            type: 2,
            title:"添加文件-"+name,
            area: ['90%', '100%'],
            fixed: true, //不固定
            maxmin: false,
            scrollbar:false,
            shadeClose:true,
            content: "{:url('/doc/adddoc')}?id="+id,
            anim:2
        });
    });

    layui.use('upload', function(){
        var upload = layui.upload;

        //执行实例
        var uploadInst = upload.render({
            elem: '#test1' //绑定元素
            ,url: "{:url('/system/upload')}" //上传接口
            ,done: function(res){
                if(res.code == 200){ //上传成功

                    $.post("{:url('/file/update/'.$info.id)}",{ftype:1,photo:res.data.src},function(res){

                        window.location.reload();
                    },'json');
                }
            }
            ,error: function(){
                //请求异常回调
            }
        });
    });

</script>

