namespace app\index\model;

use think\Model;
use think\Db;

class EmigrationModel extends Model
{
    // 设置当前模型对应的完整数据表名称
    protected $table = 'oa_emigration';

    //新建
    public function createData($data)
    {
        $data['created_at'] = date("Y-m-d H:i:s");
        $data['updated_at'] = date("Y-m-d H:i:s");
        $data['student_id']=$data['id'];
        $this->save($data);
        return $this->getLastInsID();
    }
    //根据年级获取最后一条数据
    public function getInfoByGrade($grade)
    {
        return $this->where("nian",$grade)->order("id","DESC")->find();
    }

    //新建
    public function getList($data)
    {
        $num    = $data['limit'];
        $page   = $data['page']<=0?1:$data['page'];

        $p      = ($page-1)*$num;
        $lmt    = $p.",".$num;
        $list = $this->alias('s')
            ->join(['oa_students'=>'d'],'s.student_id = d.id','INNER')
            ->field("s.*,d.name AS name,d.file_number ")
            ->order('s.id','desc')
            ->limit($lmt)
            ->select();

        $arr = array();
        $arr['count'] = $this->count();
        $arr['content'] = $list;
        return $arr;
    }

    //新建
    public function updateData($data,$id)
    {
        $data['updated_at'] = date("Y-m-d H:i:s");
        return $this->update($data,"id=".$id);
    }
}
