namespace app\index\model;

use think\Model;
use think\Db;



class BorrowModel extends Model
{
    // 设置当前模型对应的完整数据表名称
    protected $table = 'oa_borrow';


    public function revert_within($data){
        $borrow_info = $this->where('file_number',$data['file_number'])->where('j_number',$data['j_number'])->select(); //查询该借阅号的借阅记录

        //添加归还时间
        $result_upd = $this->where('file_number',$data['file_number'])->where('j_number',$data['j_number'])->update(['s_date'=>$data['s_date']]);

        //修改文件状态
        foreach ($borrow_info as $v){
            if ($v['j_on'] == 0){ //等于0 全部借阅
                Db::table('oa_file_within')->where('file_number',$data['file_number'])->update(['status'=>1]);
            }else{
                Db::table('oa_file_within')->where('file_number',$data['file_number'])->where('id',$v['j_on'])->update(['status'=>1]);
            }
        }
        $stu = Db::table('oa_file_within')->where('file_number',$data['file_number'])->where('status = 2 or status = 3')->find();
        if ($stu){
            //修改学生状态
            Db::table('oa_students')->where('file_number',$data['file_number'])->update(['status'=>2]);
        }else{
            Db::table('oa_students')->where('file_number',$data['file_number'])->update(['status'=>1]);
        }
        if ($result_upd){
            return 1;
        }else{
            return 0;
        }
    }

}
