namespace app\index\model;

use think\Model;
use think\Db;


class MajorModel extends Model
{
    // 设置当前模型对应的完整数据表名称
    protected $table = 'major';




    //查询院系
    public function getMajorList($id)
    {
        return $this->where('department_id='.$id)->select();
    }

    //获取专业id
    public function getMajorId($id,$department_id = '')
    {
        $maj = $this->where("id='".$id."' and department_id =".$department_id)->field('m_name')->find();
        return $maj['m_name'];
    }










}