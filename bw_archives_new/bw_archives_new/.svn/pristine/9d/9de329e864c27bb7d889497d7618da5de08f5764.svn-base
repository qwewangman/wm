                        <button class="layui-btn" lay-submit="" lay-filter="demo2">确认迁出</button>
                    </div>
                    <div style="height: 250px">

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script type="application/javascript">

    layui.use(['form'], function(){
        var form = layui.form;
        form.val("jiangji", {
            "grade":"{$stu_info['grade']}"
        });
        form.val("yuanxi", {
            "depart":"{$stu_info['depart']}"
            ,"major":"{$stu_info['major']}"
        });

        form.on('select(yx)', function(data){
            var str = '<option value="0">请选专业</option>';
            var id = data.value; //院系id
            if(id > 0)
            {
                $.post("{:url('/system/getzy')}",{id:id},function(res){
                    var length = res.length;
                    for (var i=0;i<length;i++) {
                        str += '<option value="'+res[i].id+'">'+res[i].name+'</option>';
                    }
                    layui.$("#zy").html(str);
                    form.render();
                },'json');
            }else{
                layui.$("#zy").html(str);
                form.render();
            }

        });
        form.on('radio(filetype)', function(data){
            if(data.value == 1)
            {
                $("#show_file").hide();
            }else {
                $("#show_file").show();
            }
        });

    });
    layui.use('laydate', function() {
        var laydate = layui.laydate;
        //日期时间范围
        laydate.render({
            elem: '#daterang'
            ,type: 'datetime'
            ,range: '~'
        });
        //日期时间范围
        laydate.render({
            elem: '#qdrq'
            ,type: 'datetime'
            ,range: false
        });

    });
    layui.use('element', function(){
        var element = layui.element;
    });
</script>
</body>
</html>