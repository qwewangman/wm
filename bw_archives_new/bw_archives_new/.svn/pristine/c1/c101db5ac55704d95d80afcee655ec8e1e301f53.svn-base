    public function updLm_do()
    {
        $data  = input('param.');
        $data['datetime'] = $data['year'].'-'.$data['month'].'-'.$data['date'];
        unset($data['year']);
        unset($data['month']);
        unset($data['date']);
        $id = $data['id'];
        $result = Db::table('oa_catelog')->where('id',$id)->update($data);
        if($result){
            $this->success('修改成功', url('/system'));
        } else {
            $this->error('操作失败,稍后重试');
        }
    }


