                        <div class="layui-input-block">
                            <input type="radio" name="type" value="1" title="普通借阅" checked>
                            <input type="radio" name="type" value="2" title="室内查阅" >
                            <input type="radio" name="type" value="3" title="在线查阅" >
                        </div>
                    </div>

                    <div class="layui-form-item" pane="">
                        <label class="layui-form-label">借阅部门：</label>
                        <div class="layui-input-block">
                            <select name="department_id" lay-verify="required">
                                {foreach name='alldepart' item='v'}
                                <option value="{$v.id}" >{$v.name}</option>
                                {/foreach}
