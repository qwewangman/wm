                <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
                <script>

                    layui.use(['form', 'laydate','upload'], function(){
                        var form = layui.form;
                        form.on('select(yx)', function(data){
                            var str = '<option value="0">请选专业</option>';
                            var id = data.value;
                            $.post("<?php echo url('/getZy'); ?>",{id:id},function(res){
                                var length = res.length;
                                for (var i=0;i<length;i++) {
                                    str += '<option value="'+res[i].id+'">'+res[i].m_name+'</option>';
                                }
                                layui.$("#zy").html(str);
                                form.render();
                            },'json');
                        });
                    })





                    $('#dy').click(function()
                    {
                        var url = "<?php echo url('/dyFile'); ?>?dyid="+ids;
                        window.location.href = url

                    })
                    var ids =[];
                    layui.use('table', function(){
                        var table = layui.table;
                        //监听表格复选框选择
                        table.on('checkbox(demo)', function(obj){
                            if(obj.checked == true)
                            {
                                var k = ids.length
                                ids[k]= obj.data.id;
                            }else{
                                var n = [];
                                var kk =0;
                                for(var i=0 ;i<ids.length ;i++)
                                {
                                    if(obj.data.id != ids[i])
                                    {
                                        n[kk] =ids[i];
                                        kk++
                                    }
                                }
                                ids = n;
                            }


                        });






//                                -------------------------------------------------------------------

//方法级渲染
                        table.render({
                            elem: '#LAY_table_user'
                            ,url: "<?php echo url('/fileList'); ?>"
                            ,cols: [[
                                {checkbox: true, fixed: true}
                                ,{field:'file_number', title: '卷号',fixed: true}
                                ,{field:'sc_number', title: '学号'}
                                ,{field:'file_derice', title: '存放位置'}
                                ,{field:'user_name', title: '卷名'}
                                ,{field:'addtime', title: '立卷日期'}
                                ,{field:'num', title: '总件数'}
                                ,{field:'status', title: '状态'}
                                ,{field:'url', title: ''}
                            ]]
                            ,id: 'testReload'
                            ,page:true

                        });

                        var $ = layui.$, active = {
                            reload: function(){
                                var courtyard = $('#courtyard');
                                var zy = $('#zy');
                                var sc_number = $('#sc_number');
                                var user_name = $('#user_name');
                                var file_number = $('#file_number');
                                //执行重载
                                table.reload('testReload', {
                                    page: {
                                        curr: 1 //重新从第 1 页开始
                                    }
                                    ,where: {
                                        key: {
                                            courtyard: courtyard.val(),
                                            major: zy.val(),
                                            file_number:file_number.val(),
                                            sc_number: sc_number.val(),
                                            user_name: user_name.val()
                                        }
                                    }
                                });
                            }
                        };



//                               --------------------------------------------------------------------

                        //监听工具条
                        table.on('tool(demo)', function(obj){
                            var data = obj.data;
                            var id = data.id;
                            if(obj.event === 'detail'){
                                var url = "<?php echo url('/ChaKan'); ?>?id="+id;
                                window.location.href = url
                            } else if(obj.event === 'del'){
                                var url = "<?php echo url('/BdCl'); ?>?id="+id;
                                window.location.href = url

                            } else if(obj.event === 'edit'){
                                var url = "<?php echo url('/updJy'); ?>?id="+id;
                                window.location.href = url
                            }
                        });


                        $('.demoTable .layui-btn').on('click', function(){
                            var type = $(this).data('type');
                            active[type] ? active[type].call(this) : '';
                        });
                    });
                </script>










