                            </select>
                        </div>
                    </div>
                    <div class="layui-form-item" pane="">
                        <label class="layui-form-label">借阅文件：</label>
                        <div class="layui-input-block">
                            <input type="radio" name="filetype" value="1" title="全卷借阅" lay-filter="filetype" checked>
                            <input type="radio" name="filetype" value="2" title="分文件借阅"  lay-filter="filetype">
                            <br>
                            <div id="show_file" style="margin-top: 10px;display: none">
                                {foreach name='d_list' item='v'}
                                <fieldset class="layui-elem-field">
                                    <legend style="color: #000;font-size: 14px">{$v.name}</legend>
                                    <div class="layui-field-box">
                                        {foreach $v.doc as $vo}
                                        <input type="checkbox" name="doc[]" title="{$vo.name}" value="{$vo.id}" lay-skin="primary"><br>
                                        {/foreach}
                                    </div>
                                </fieldset>
                                {/foreach}
                            </div>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">　借阅人：</label>
                        <div class="layui-input-block" >
                            <input type="text" name="name" placeholder="请输入借阅人或公司名称" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">联系方式：</label>
                        <div class="layui-input-block" >
                            <input type="text" name="phone" placeholder="请输入借阅联系方式" autocomplete="off" class="layui-input">
                        </div>
                    </div>

