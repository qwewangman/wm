                                <div class="layui-form-item" style="text-align: center">
                                    <input type="hidden" name="ctype" value="shengxue">
                                    <button class="layui-btn" lay-submit="" lay-filter="demo2">提交</button>
                                </div>
                                <div style="height: 250px">

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="layui-tab-item">

                <form class="layui-form" action="{:url('/file/dochange/'.$stu_info['id'])}" lay-filter="yuanxi">
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">院　　系：</label>
                            <div class="layui-input-inline">
                                <select name="depart" lay-filter="yx" id="depart" lay-verify="required">
                                    <option value="" selected>请选择院系</option>
